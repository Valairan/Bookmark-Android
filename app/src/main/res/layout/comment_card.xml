<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentAuthor_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:text="Anonymous User"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/commentRating_Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commentAuthor_Card"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/pink_accent"
            android:rating="5"
            android:stepSize="1"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/commentBody_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentRating_Card"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:text="Comment Body goes here..."
            android:textSize="18sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>