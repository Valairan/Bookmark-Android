<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bookThumbs_Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookTitle_Card"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#0000df"
            android:backgroundTintMode="screen"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/bookTitle_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:maxLines="1"
            android:text="TITLE"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/bookAuthor_Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookTitle_Card"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:layout_toLeftOf="@+id/bookThumbs_Card"
            android:text="AUTHOR"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookDescription_Card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookAuthor_Card"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp"
            android:layout_toLeftOf="@+id/bookThumbs_Card"
            android:fontFamily="@font/segoeuii"
            android:maxLines="4"
            android:text="DESCRIPTION"
            android:textSize="16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>